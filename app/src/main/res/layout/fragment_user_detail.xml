<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.cs2340.hgt.FriendsActivity.PlaceholderFragment"
    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/friend_profile_picture"
        android:layout_gravity="left|top"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/placeholder"
        android:id="@+id/friend_detail_name"
        android:layout_toRightOf="@+id/friend_profile_picture"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@+id/friend_profile_picture"
        android:layout_centerHorizontal="true"
        style="@android:style/TextAppearance.Holo.Small"
        android:textColor="#ff171413" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "@string/placeholder"
        android:background="#E8E6D0"
        android:id="@+id/friend_detail_description"
        android:layout_below="@+id/friend_profile_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:minHeight="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textColor="#bea3a3a3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/friend_detail_name"
        android:layout_toRightOf="@+id/friend_profile_picture"
        android:id="@+id/friend_detail_email"
        android:layout_alignLeft="@+id/friend_detail_name"
        android:layout_alignStart="@+id/friend_detail_name"
        android:minWidth="100dp" />

    <ListView
        android:id="@+id/friend_detail_interest_list"
        android:layout_below="@+id/friend_detail_description"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="new sale"
        android:id="@+id/user_detail_new_sale_btn"
        android:layout_marginTop="32dp"
        android:background="#E8E7D0"
        android:layout_below="@+id/friend_detail_email"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:background="#E8E7D0"
        android:id="@+id/user_detail_edit_btn"
        android:layout_alignTop="@+id/user_detail_new_sale_btn"
        android:layout_toRightOf="@+id/user_detail_new_sale_btn"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/friend_detail_name" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="report"
        android:id="@+id/user_detail_reportBtn"
        android:layout_below="@+id/friend_detail_description"
        android:layout_toRightOf="@+id/user_detail_edit_btn"
        android:layout_toEndOf="@+id/user_detail_edit_btn" />


</RelativeLayout>
