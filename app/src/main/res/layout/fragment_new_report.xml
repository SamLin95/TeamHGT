<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="edu.gatech.cs2340.hgt.NewReportFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/new_report_item_name"
        android:hint="Name"
        android:layout_below="@+id/new_report_price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/new_report_submitBtn"
        android:layout_alignTop="@+id/new_report_cancelBtn"
        android:layout_alignRight="@+id/new_report_item_name"
        android:layout_alignEnd="@+id/new_report_item_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:id="@+id/new_report_cancelBtn"
        android:layout_below="@+id/map"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_report_status"
        android:text="Click submit button to submit"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/new_report_item_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/new_report_price"
        android:inputType="number"
        android:hint="Please enter the price"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/new_report_dollar_sign"
        android:text="$"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/new_report_price"
        android:layout_toRightOf="@+id/new_report_price"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set up location"
        android:id="@+id/new_report_location"
        android:layout_below="@+id/new_report_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp" />


</RelativeLayout>
